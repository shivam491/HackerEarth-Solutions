https://www.hackerearth.com/problem/algorithm/a-summing-punishment-7/
----------
#include <bits/stdc++.h>
using namespace std;
 
int main()
{
	long long int t,i,j,k,l,m,n,p;
	cin>>n;
	long long int a[n];
	for(i=0;i<n;i++)
	cin>>a[i];
	cin>>t;
	while(t--)
	{
		cin>>l>>k;
		p=0;
		for(i=l-1;i<k;i++)
		p+=a[i];
		cout<<p<<"\n";
	}
}
